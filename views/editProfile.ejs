<%- include('./partials/nav') %>


<form action="/settings/editprofile" method="POST" class="theme-box theme-form">
    <% if(error) { %>
        <div style="
            position: absolute;
            left: 40px;
            top: 80px;
            font-size: .9rem;
            color: red;
        "><%= error %></div>
    <% } %>

    <h2><%= username %></h2>
    <textarea name="bio" cols="30" rows="5" placeholder="Bio.."><%= bio %></textarea>
    <input type="password" name="password" placeholder="Password" required>
    <button type="submit">Done</button>
</form>